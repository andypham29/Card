<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.yes.MainActivity"
    android:background="@drawable/bg_snow"
    android:screenOrientation="landscape"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Menu"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"
        android:layout_marginTop="59dp"
        android:textColor="#FFFFFF"
        android:fontFamily="arial"
        android:textSize="25dp"
        android:layout_marginBottom="8dp"
         />

    <Button
        android:id="@+id/war"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Go to War"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/solo" />
    <Button
        android:id="@+id/solo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Solo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/challenge" />

    <Button
        android:id="@+id/shop"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Shop"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/account" />

    <Button
        android:id="@+id/account"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Account"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/setting" />

    <Button
        android:id="@+id/challenge"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button"
        android:text="Challenge"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="226dp" />

    <Button
        android:id="@+id/card_list"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Card List"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/shop"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/challenge"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/setting"
        android:onClick="ShowPopup"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Setting"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp" />


</android.support.constraint.ConstraintLayout>
